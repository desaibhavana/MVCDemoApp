@model MVCDemoApp.Models.Employee

@{
    ViewBag.Title = "EmployeeFormST";
}

<style>
    .field-validation-valid {
        display: none;
    }
</style>
@section scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}


@section heading {
    EmployeeFormST
}


